<Window x:Class="Log_in_Form.Store"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Log_in_Form"
        mc:Ignorable="d"
        Title="Store" Height="450" Width="800">


    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="20">
            <Label Target="{x:Reference Name =StoreName}" FontSize="30">Store</Label>
            <TextBox x:Name="StoreName" Width="400" FontSize="20" Margin="10"></TextBox>
        </StackPanel>
        <Button Width="250" Margin="25" Click="Button_Click_1">Add</Button>
        <Canvas>
            <Button Canvas.Left="661" Canvas.Top="181" Width="70"  BorderBrush="Red" BorderThickness="3" FontSize="17" Foreground="White" Click="Button_Click">
                <Button.Content >Back</Button.Content>
            </Button>
        </Canvas>

    </StackPanel>
</Window>
